    </small>
  </footer>

  <!-- jQuery -->
  <script 
    src="https://code.jquery.com/jquery-3.6.0.min.js" 
    crossorigin="anonymous"
  ></script>

  <!-- DataTables core JS -->
  <script 
    src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"
  ></script>
  <script 
    src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"
  ></script>

  <!-- Responsive extension JS -->
  <script 
    src="https://cdn.datatables.net/responsive/2.4.1/js/dataTables.responsive.min.js"
  ></script>
  <script 
    src="https://cdn.datatables.net/responsive/2.4.1/js/responsive.bootstrap5.min.js"
  ></script>

  <script>
$(document).ready(function() {
    function applyTextShortening(selector, maxLength, cutFromEnd = false) {
        document.querySelectorAll(selector).forEach(element => {
            let originalText = element.innerText.trim();

            if (originalText.length > maxLength) {
                let truncatedText = cutFromEnd 
                    ? '…' + originalText.slice(-maxLength) 
                    : originalText.substring(0, maxLength) + '…';

                element.setAttribute('data-full-text', originalText);
                element.innerText = truncatedText;

                function insertLineBreaks(text, n) {
                    return text.replace(new RegExp(`(.{${n}})`, 'g'), '$1\n');
                }

                element.addEventListener('mouseenter', function () {
                    let fullText = this.getAttribute('data-full-text'); 
                    this.innerText = insertLineBreaks(fullText, maxLength);
                    this.style.whiteSpace = "pre-line";
                });

                element.addEventListener('mouseleave', function () {
                    this.innerText = truncatedText;
                    this.style.whiteSpace = "nowrap";
                });
            }
        });
    }

    // Wende die Methode auf die entsprechenden Spalten an
    applyTextShortening('.description', 36);  
    applyTextShortening('.id', 8, true);  

    // Funktion zur Initialisierung von DataTables (abhängig von full-view)
    function initializeDataTable(isFullView) {
        if ($.fn.DataTable.isDataTable('#transactionsTable')) {
            $('#transactionsTable').DataTable().destroy(); // Entferne bestehende Instanz
        }

        $('#transactionsTable').DataTable({
            responsive: !isFullView, // Responsive NUR, wenn nicht Full View
            scrollX: isFullView, // Scrollen aktivieren, wenn Full View an ist
            order: [[0, "desc"]],
            pageLength: 25,
            lengthMenu: [
                [10, 25, 50, 100, -1],
                [10, 25, 50, 100, "All"]
            ]
        });
    }

    // Starte die DataTable normal (responsive aktiviert)
    initializeDataTable(false);

    // Reset Filters button
    $('#resetFilters').on('click', function () {
        $('#transactionsTable').DataTable().columns().search('').draw();
        $('#transactionsTable tfoot input').val('');
    });

    // Toggle Full View
    $('#toggleFullView').on('click', function () {
        $('body').toggleClass('full-view');

        let isFullView = $('body').hasClass('full-view');
        initializeDataTable(isFullView); // Re-initialisiere DataTable basierend auf Modus
    });
});
  </script>
</body>
</html>